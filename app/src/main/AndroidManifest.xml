<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	package="com.padc.kotlin.ftc.themoviebooking">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".MovieBookingApplication"
		android:allowBackup="true"
		android:dataExtractionRules="@xml/data_extraction_rules"
		android:fullBackupContent="@xml/backup_rules"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieBooking"
        tools:targetApi="31">
		<activity
			android:name=".activities.SeatingPlanActivity"
			android:exported="false"
			android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
        <activity
            android:name=".activities.AddNewCardActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
        <activity
            android:name=".activities.PaymentDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
        <activity
            android:name=".activities.VoucherActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBooking.VoucherTheme" />
        <activity
            android:name=".activities.SnackActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
        <activity
            android:name=".activities.MovieTimeActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
        <activity
            android:name=".activities.MovieDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBooking.TransparentTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
		<activity
			android:name=".activities.LoginActivity"
			android:exported="true"
			android:theme="@style/Theme.TheMovieBooking.TransparentTheme" />
    </application>

</manifest>