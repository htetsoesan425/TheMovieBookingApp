    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCardHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/ivVisa"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Lily Johnson"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblCardHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvCardHolderName"
        android:layout_alignStart="@id/ivVisa"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/lbl_card_holder"
        android:textAllCaps="true"
        android:textColor="@color/colorSecondaryText" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvExpireDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvCardHolderName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/margin_start_card"
        android:text="08/21"
        android:textColor="@color/white"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblExpireDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvCardHolderName"
        android:layout_alignEnd="@id/tvExpireDate"
        android:layout_alignBottom="@id/lblCardHolder"
        android:text="@string/lbl_expires"
        android:textAllCaps="true"
