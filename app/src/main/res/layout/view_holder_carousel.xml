    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivVisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_card"
        android:layout_marginEnd="@dimen/margin_start_card"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:srcCompat="@drawable/visa_32px" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivThreeDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivVisa"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/margin_start_card"
        android:layout_marginEnd="@dimen/margin_start_card"
        android:layout_marginBottom="@dimen/margin_start_card"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:srcCompat="@drawable/more_24px" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv4stars1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivVisa"
        android:layout_alignStart="@id/ivVisa"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:gravity="center"
	    android:text="* * * * "
	    android:textColor="@android:color/white"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="bold" />

